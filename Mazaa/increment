generateShop();
    let increment = (id) => {
      let search = basket.find((x) => x.id === id);
  
      if (search === undefined) {
          basket.push({
              id: id,
              item: 1,
          });
      } else {
          search.item += 1;
      }
      update(id);
      localStorage.setItem("data", JSON.stringify(basket));
  };
  
  let decrement = (id) => {
      let search = basket.find((x) => x.id === id);
  
      if (search === undefined || search.item === 0) return;
      else {
          search.item -= 1;
      }
      update(id);
      basket = basket.filter((x) => x.item !== 0);
      localStorage.setItem("data", JSON.stringify(basket));
  };
  
  let update = (id) => {
      let search = basket.find((x) => x.id === id);
      document.getElementById(id).innerHTML = search.item;
  };
  
  
  
  
